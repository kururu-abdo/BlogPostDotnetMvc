@model List<Blog.Web.Models.Domain.Tag>


@{}
<div class="bg-secondary bg-opacity-10 py-2">
    <div class="container">
        <h1>All Tags </h1>
    </div>
</div>

<div class="container py-5">
    @if(Model != null && Model.Any())
{
<table class="table">
    <thead>
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th>Display Name</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var tag in Model)
            {
<tr>
    <td>@tag.Id</td>


    <td>@tag.Name</td>

    <td>@tag.DisplayName</td>
    <td> <a  class="btn btn-info"
            asp-area=""
            asp-action="Edit"
            asp-route-id="@tag.Id"
            >Edit</a>  </td>

</tr>
            }
    </tbody>
</table>
}else
{
<div  class="text-center">  <p>No Tags found</p></div>
}
</div>