@model List<Blog.Web.Models.Domain.BlogPost>

@{

}

<div class="bg-secondary bg-opacity-10 py-2">
    <div class="container">BlogPost List </div>
</div>





<div class="container py-5">
    @if (Model.Count() >0)
    {
        <table class="table">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Heading</th>
                    <th>Tags</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var blog in Model)
                {
                    <tr>
                        <td>@blog.Id</td>


                        <td>@blog.Heading</td>

                        <td>
                            <div class="d-flex">

                                @foreach (var tag in blog.Tags)
                                    {
                                        <div class="badge bg-secondary  me-1">
                                            @tag.Name

                                        </div>
                                    }
                            </div>
                        </td>



                        <td>
                            <a class="btn btn-info"
                               asp-area=""
                               asp-controller="AdminBlogPosts"
                               asp-action="Edit"
                               asp-route-id="@blog.Id">Edit</a>
                        </td>

                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {

            <div class="text-center">  <p>No Posts </p></div>
    }
    </div>
